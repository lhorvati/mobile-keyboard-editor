/* BUTTON.STYL ======================================= */

body
    width: 100vw
    height: 100vh
    flexbox()
    flex-center()
    background: #666


// Ripple Effect =====================
button
    position: relative
    overflow: hidden

button:after
    content: ''
    position: absolute
    top: 50%
    left: 50%
    width: 5px
    height: 5px
    background: rgba(0, 0, 0, .1)
    opacity: 0
    border-radius: 100%
    transform: scale(1, 1) translate(-50%)
    transform-origin: 50% 50%


@keyframes ripple {
  0% {
    transform: scale(0, 0);
    opacity: 1;
  }
  20% {
    transform: scale(25, 25);
    opacity: 1;
  }
  100% {
    opacity: 0;
    transform: scale(40, 40);
  }
}

button:focus:not(:active)::after
    animation: ripple 1s ease-out




// Keyboard layout =====================
.keyboard-plugin
    flexbox()
    flex-flow: row nowrap
    align-items: center
    justify-content: space-around
    background: #fff

    position: absolute
    bottom: 0
    left: 0
    right: 0

    width: 100%
    max-width: 600px
    height: 50px
    border-top: 2px solid #dadada
    noselect()


    .keyboard-spacer
        width: 2px
        height: 70%
        background: #D9D9D9

    .keyboard-item
        width: 50px
        height: 50px
        border-radius(5px)
        flexbox()
        flex-center()
        overflow: hidden
        noselect()

        &:nth-child(3)
            svg
                width: 40px
        &:nth-child(4)
            svg
                width: 30px


        &:nth-child(13),
        &:nth-child(14)
            svg
                width: 24px
                height: 24px

        &:nth-child(1)
            svg
                width: 18px
                height: 18px




    .keyboard-item.special

        &.pressed .pressed-wrap
            display: flex !important

        svg
            width: 30px
            height: 30px

        .pressed-wrap
            display: none
            background: url(../images/btn-press.svg)
            background-size: 100px 150px
            width: 100px
            height: 150px
            position: absolute
            margin-top: -56px

            &.pressed
                display: flex
                flexbox()


            .pressed-item
                position: absolute
                font-size: 20px
                font-weight: 900
                color: #757575
                font-family: Arial, Helvetica, sans-serif
                transition(.2s)
                width: 30px
                height: 30px
                flexbox()
                justify-content: center
                align-items: center

                &:hover,
                &.selected
                    color: colorWhite
                    font-size: 26px
                    text-shadow: 0 0 10px colorBlack

                &:nth-child(1)
                    top: 6px
                    left: 10px

                &:nth-child(2)
                    top: 6px
                    right: 10px

                &:nth-child(3)
                    top: 34px
                    left: 36px

                &:nth-child(4)
                    bottom: 60px
                    left: 10px

                &:nth-child(5)
                    bottom: 60px
                    right: 10px